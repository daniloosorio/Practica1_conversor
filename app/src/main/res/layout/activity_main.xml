<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49849C"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ed_entrada"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/ed_circular"
        android:ems="10"
        android:hint="@string/entrada"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/sp_moneda1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ed_circular"
        android:entries="@array/monedas_in"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/sp_moneda2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ed_circular"
        android:entries="@array/monedas_in"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_salida"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ed_circular"
        android:gravity="center_horizontal|center_vertical"
        android:hint="@string/salida"
        android:textAlignment="gravity"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bt_convertir"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        android:text="@string/convertir"
        android:background="@drawable/boton_circular"
        android:textColor="@drawable/bt_circular"
        android:textAlignment="center" />
</LinearLayout>